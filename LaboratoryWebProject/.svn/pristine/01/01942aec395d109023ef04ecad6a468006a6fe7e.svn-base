<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
<title>学术会议</title>
<link href="css/second/exchangeSubPageBase.css" rel="stylesheet" media="screen">
</head>
<body>
	<div id="div"></div>
	<div id="div2">
		<c:forEach items="${articleList}" var="articleTitle">
			<p>
				<a fff="frontExchangeAction_showArticleDetail?id=${articleTitle.id}" onclick="pageQuery(this)">${articleTitle.title}</a><label>(${articleTitle.createTime})</label>
			</p>
		</c:forEach>
		
		
		<!-- 分页显示 -->
	<%-- 	<p align="center" class="toPage">
			<a href="#">首页 </a>&nbsp;&nbsp; <a href="#">上一页</a>&nbsp;&nbsp; <a
				href="#">下一页</a>&nbsp;&nbsp; <a href="#">尾页</a><br>
		</p>
		<p align="center">
			总共${pageCount}条记录-当前第${pageNow}页/总页数${pageCount}页&nbsp;&nbsp; 第<input type="text">页&nbsp;&nbsp;
			<input type="button" value="确定">
		</p> --%>
		<!-- ==================================分页开始======================================== -->
	<div id="paging">
		当前第${requestScope.pageNow }页,共${requestScope.pageCount }页&nbsp;&nbsp;
		<a fff="frontExchangeAction_part?section=1&pageNow=1" onclick="pageQuery(this)">[1]</a>&nbsp;  
		<c:if test="${requestScope.pageCount != 1}">  
		    <c:choose>  
		        <c:when test="${requestScope.pageNow <= 5}">  
		            <c:forEach var="i" begin="2" end="${requestScope.pageNow}">  
		                <a fff="frontExchangeAction_part?section=1&pageNow=${i}" onclick="pageQuery(this)">[${i }]</a>&nbsp;  
		            </c:forEach>  
		        </c:when>  
		        <c:otherwise>  
		            ...&nbsp;  
		            <c:forEach var="i" begin="${requestScope.pageNow - 3}"  
		                end="${requestScope.pageNow}">  
		                <a fff="frontExchangeAction_part?section=1&pageNow=${i}" onclick="pageQuery(this)">[${i }]</a>&nbsp;  
		            </c:forEach>  
		        </c:otherwise>  
		    </c:choose>  
		    <c:choose>  
		        <c:when test="${requestScope.pageNow>=sessionScope.pageCount-4   
		            || requestScope.pageCount-4<=0}">  
		            <c:forEach var="i" begin="${requestScope.pageNow+1}"  
		                end="${requestScope.pageCount}">  
		                <a fff="frontExchangeAction_part?section=1&pageNow=${i}" onclick="pageQuery(this)">[${i }]</a>&nbsp;  
		            </c:forEach>  
		        </c:when>  
		        <c:otherwise>  
		            <c:forEach var="i" begin="${requestScope.pageNow+1}"  
		                end="${requestScope.pageNow+3}">  
		                <a fff="frontExchangeAction_part?section=1&pageNow=${i}" onclick="pageQuery(this)">[${i }]</a>&nbsp;  
		            </c:forEach>  
		            ...&nbsp;  
		            <a fff="frontExchangeAction_part?section=1&pageNow=${requestScope.pageCount}" onclick="pageQuery(this)">  
		                [${requestScope.pageCount}]</a>&nbsp;  
		        </c:otherwise>  
		    </c:choose>  
		</c:if>  
	</div>
	<!-- ==================================分页结束======================================== -->
	</div>

</body>
</html>