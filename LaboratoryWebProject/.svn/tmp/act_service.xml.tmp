	<property name="sessionFactory" ref="sessionFactory" />
</bean>

<bean id="messageService" class="cn.edu.cdu.lab.service.impl.MessageServiceImpl" scope="prototype">
	<property name="sessionFactory" ref="sessionFactory" />
</bean>
